title: $:/plugins/oeyoews/tiddlywiki-fancybox/macro
tags: $:/tags/Macro

\whitespace trim

\define Fancybox(links, caption, width:256)
<$list filter="[enlist<__links__>sort[]]" variable="link">
    <a
      href=<<link>>
      data-fancybox=<<qualify>>
      data-caption=$caption$>
      <$image
        source=<<link>>
        loading="lazy"
        tooltip=<<link>>
        width=$width$
        class="rounded"/>
    </a>
</$list>
\end
