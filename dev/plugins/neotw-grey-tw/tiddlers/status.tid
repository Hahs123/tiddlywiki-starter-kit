title: $:/plugins/oeyoews/neotw-gray-tw/status

<$list filter="$:/status/neotw-gray-tw/mode" variable=".state">

<!-- show -->
<$reveal state=<<.state>> type="nomatch" text="show">

<$fieldmangler tiddler="$:/plugins/oeyoews/neotw-grey-tw/style">
	<$button set=<<.state>> setTo="show">Disable {{neotw/icon/warn}}<$action-sendmessage $message="tm-add-tag" $param="$:/tags/Stylesheet"/>
	</$button>
</$fieldmangler>

</$reveal>

<!-- hide -->
<$reveal state=<<.state>> type="match" text="show">

<$fieldmangler tiddler="$:/plugins/oeyoews/neotw-grey-tw/style">
	<$button set=<<.state>> setTo="hide">Enable {{neotw/icon/approve}}<$action-sendmessage $message="tm-remove-tag" $param="$:/tags/Stylesheet"/>
	</$button>
</$fieldmangler>

</$reveal>

</$list>
<$button>
  <$action-deletetiddler $tiddler="$:/plugins/oeyoews/neotw-grey-tw/style"/> Reset
</$button>
