\rules except list

#stx-story-top {
   position: fixed;
   bottom: 1rem;
   right: 1rem;
   font-size: 1.75rem;
   z-index: 999;
}

#stx-story-top button {
   opacity: 0.7;
   min-width: 1.5em;
}

#stx-story-top .tc-btn-text {
   margin-left: 0.3em;
   vertical-align: middle;
}

#stx-story-top .tc-btn-invisible {
   font-size: 0.75em;
}

#stx-story-top .tc-btn-invisible:hover,
#stx-story-top .tc-btn-invisible:focus {
   opacity: 1;
}

#stx-story-top .tc-btn-rounded,
#stx-story-top .tc-btn-boxed {
   min-width: 2.5em;
}

#stx-story-top .tc-btn-rounded {
   font-size: 0.5em;
   height: 2.5em;
}

#stx-story-top .tc-btn-boxed {
   font-size: 0.6em;
   padding-left: 0.5em;
   padding-right: 0.5em;
}

#stx-story-top .tc-btn-rounded:focus,
#stx-story-top .tc-btn-rounded:active {
   padding-left: 0.75em;
   padding-right: 1em;
}
