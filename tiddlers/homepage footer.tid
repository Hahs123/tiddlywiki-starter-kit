\define neotwstatus()
<$text text=
{{{[[$:/plugins/tiddlywiki/tiddlyweb]get[name]else[Online]]}}} >
\end

\define screen()
{{$:/info/browser/screen/width}} x
{{$:/info/browser/screen/height}}
\end

\define doy() 
<<now "ddddd days">>
\end

\define now2()
<<now "YY/0MM/0DD/ 0hh:0mm">>
\end

\define starttime()
<$list filter="[!is[system]has[created]!sort[created]!limit[1]]">
<$view field="created" format="relativedate"/>
</$list>
\end

\define updatedtime()
<$list filter="[!is[system]!has[draft.of]!sort[modified]limit[1]]">
<$view field="modified" format="relativedate"/>
</$list>
\end

\define totalplugins() 
<$count filter="[!has[draft.of]plugin-type[plugin]]"/>
\end

\define subwiki-private() 
<$count filter="[!has[draft.of]tag[private]]"/>
\end

\define totaltiddlers()
<$count filter="[!is[system]sort[title]]"/> 
\end

