\end

\define TODO() <<neotw-keyword "TODO" b1>>

\define HACK() <<neotw-keyword "HACK" b2>>

\define FIXME() <<neotw-keyword "FIXME" b3>>

\define DONE() <<neotw-keyword "DONE" b4>>

\define WARN() <<neotw-keyword "WARN" yellow>>